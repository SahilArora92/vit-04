<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="what do you want to learn more about?"
        android:textColor="@color/paleYellow"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:text="(list in grouped by clinical characteristics)" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="18dp"
        android:text="Erythematous scaly rashes"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvec" 
        android:layout_below="@+id/tvps"
        android:text="Eczema(atopic dermatitis)"
        style="@style/Clinical_Text" />

    <TextView
        android:id="@+id/tvtc"
        style="@style/Clinical_Text"
        android:layout_below="@+id/tvec"
        android:text="Tinea Corporis" />

    <TextView
        android:id="@+id/tvtf"
        style="@style/Clinical_Text"
        android:layout_below="@+id/tvtc"
        android:text="Tinea Faciei" />

    <TextView
        android:id="@+id/tvtp"
        style="@style/Clinical_Text"
        android:layout_below="@+id/tvtf"
        android:text="Tinea Pedis" />

    <TextView
        android:id="@+id/tvtca"
        style="@style/Clinical_Text"
        android:layout_below="@+id/tvtp"
        android:text="Tinea Capitis(scalp ringworm)" />

    <TextView
        android:id="@+id/tvps"
        style="@style/Clinical_Text"
        android:layout_below="@+id/textView3"
        android:text="Psoriasis" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvtca"
        android:layout_marginTop="14dp"
        android:text="Vesicular or Bullous dermatitis "
        android:textSize="16sp"
        android:textStyle="bold" />

          <TextView
              android:id="@+id/tvhs"
              android:layout_below="@+id/textView4"
              style="@style/Clinical_Text"
              android:text="Herpes Simplex" />

          <TextView
              android:id="@+id/tvhz"
              android:layout_below="@+id/tvhs"
              style="@style/Clinical_Text"
              android:text="Herpes Zoster" />

          <TextView
              android:id="@+id/tvim"
              android:layout_below="@+id/tvhz"
              style="@style/Clinical_Text"
              android:text="Impetigo" />

          <TextView
              android:id="@+id/textView5"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_below="@+id/tvim"
              android:layout_marginTop="14dp"
              android:text="Growths"
              android:textSize="16sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/tvfwa"
              android:layout_below="@+id/textView5"
              style="@style/Clinical_Text"
              android:text="Flat Warts" />

          <TextView
              android:id="@+id/tvwa"
              android:layout_below="@+id/tvfwa"
              style="@style/Clinical_Text"
              android:text="Warts" />

          <TextView
              android:id="@+id/textView6"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_below="@+id/tvwa"
              android:layout_marginTop="14dp"
              android:text="Pigmentary"
              android:textSize="16sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/tvpy"
              android:layout_below="@+id/textView6"
              style="@style/Clinical_Text"
              android:text="Pytiriasis alba" />

          <TextView
              android:id="@+id/tvvi"
              android:layout_below="@+id/tvpy"
              style="@style/Clinical_Text"
              android:text="Vitiligo" />

          <TextView
              android:id="@+id/textView7"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_below="@+id/tvvi"
              android:layout_marginTop="14dp"
              android:text="Nail Disorders"
               android:textSize="16sp"
        android:textStyle="bold" />

          <TextView
              android:id="@+id/tvon"
              android:layout_below="@+id/textView7"
              style="@style/Clinical_Text"
              android:text="Onychomycosis" />

          <TextView
              android:id="@+id/textView8"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_alignRight="@+id/tvpy"
              android:layout_marginTop="14dp"
              android:text="Bites and Infestations"
              android:textSize="16sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/tvib"
              style="@style/Clinical_Text"
              android:text="Insect Bites" />

          <TextView
              android:id="@+id/tvsc"
              android:layout_marginBottom="18dp"
              style="@style/Clinical_Text"
              android:text="Scabies" />
          
</LinearLayout>
</ScrollView>